      display: flex;
      flex-wrap: wrap;
      align-items: flex-start;
      padding: 40px 20px;
      gap: 30px;
    }

    .logo-section img {
      max-width: 300px;
      height: auto;
    }

    .logo-text {
      flex: 1;
      min-width: 280px;
    }

    .logo-text h2 {
      font-size: 26px;
      margin-bottom: 15px;
    }

    .logo-text p {
      font-size: 16px;
      line-height: 1.6;
      margin-bottom: 15px;
    }

    @media (max-width: 768px) {
      .logo-section {
        flex-direction: column;
        align-items: center;
        text-align: center;
      }

      .logo-text {
        text-align: left;
      }
    }
  </style>
</head>
