                    // window.location.href = '/Staff/login';
                     setTimeout(() =>  window.location.href = '/Staff/login', 1500)
                    return;
                }

                const logoutBtn = document.getElementById('logoutBtn');
                if (!logoutBtn) {
                    console.warn('Logout button not found');
                    return;
                }
        
