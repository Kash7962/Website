<style>
  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  header {
    background: #1b3a57;
    padding: 12px 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    position: sticky;
    top: 0;
    z-index: 1000;
    border-radius: 0;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .logo img {
    height: 60px;
  }

  .logo h1 {
    color: white;
    font-size: 24px;
  }

  .menu-toggle {
    display: none;
    font-size: 28px;
    cursor: pointer;
    color: white;
  }

  nav#navMenu {
    display: flex;
    align-items: center;
    gap: 20px;
  }

  nav#navMenu a,
  .dropdown > button {
    background: none;
    border: none;
    padding: 10px 16px;
    color: #ffffff;
    font-weight: 600;
    cursor: pointer;
    font-size: 16px;
    transition: background-color 0.3s ease;
    text-align: left;
    text-decoration: none;
    border-radius: 8px; /* Green hover curve */
  }

  nav#navMenu a:hover,
  .dropdown > button:hover {
    background-color: rgba(0, 255, 0, 0.2);
  }

  .dropdown {
    position: relative;
  }

  .dropdown-content {
    display: none;
    position: absolute;
    top: 110%;
    left: 0;
    background-color: #2f5f85;
    min-width: 220px;
    z-index: 999;
    border-radius: 8px;
    overflow: hidden;
  }

  .dropdown-content a {
    display: block;
    padding: 12px 16px;
    color: #ffffff;
    text-decoration: none;
    transition: background 0.3s ease;
    border-radius: 8px;
  }

  .dropdown-content a:hover {
    background-color: rgba(0, 255, 0, 0.2);
  }

  @media (min-width: 769px) {
    .dropdown:hover .dropdown-content {
      display: block;
    }
  }

  @media (max-width: 768px) {
    .menu-toggle {
      display: block;
    }

    nav#navMenu {
      display: none;
      flex-direction: column;
      width: 100%;
      background-color: #1b3a57;
      padding: 12px;
    }

    nav#navMenu.active {
      display: flex !important;
    }

    .dropdown-content {
      position: static;
      border-radius: 0;
    }

    .dropdown.active .dropdown-content {
      display: block;
    }

    nav#navMenu a,
    .dropdown > button {
      width: 100%;
      text-align: left;
    }
  }
</style>

<header>
  <div class="logo">
