<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login</title>
  <style>
    * { box-sizing: border-box; }
    body {
      font-family: Arial, sans-serif;
      background: linear-gradient(to right, #2c3e50, #3498db);
      margin: 0;
      padding: 0;
      color: #333;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    .container {
      width: 100%;
      max-width: 400px;
      background: #ffffff;
      padding: 30px;
      border-radius: 15px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.25);
    }
    h2 {
      text-align: center;
      color: #1e3c72;
      margin-bottom: 30px;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 20px;
    }
    .form-group {
      display: flex;
      flex-direction: column;
    }
    label {
      margin-bottom: 6px;
      font-weight: bold;
    }
    input {
      padding: 10px;
      font-size: 1rem;
      border: 1px solid #aaa;
      border-radius: 5px;
    }
    button {
      width: 100%;
      padding: 12px;
      font-size: 1rem;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    button[type="submit"] {
      background-color: #1e88e5;
      color: white;
    }
    button[type="submit"]:hover {
      background-color: #1565c0;
    }

    .google-wrapper {
      display: flex;
      justify-content: center;
      margin-top: 10px;
    }

    #g_id_signin {
      width: 100%;
    }

    .footer-text {
      text-align: center;
      margin-top: 20px;
      font-size: 0.9rem;
      color: #666;
    }

    .footer-text a {
      color: #1e88e5;
      text-decoration: none;
    }

    .footer-text a:hover {
      text-decoration: underline;
    }

    @media (max-width: 500px) {
      .container {
        margin: 20px;
        padding: 20px;
      }
      h2 {
        font-size: 1.4rem;
      }
      input, button {
        font-size: 1rem;
      }
    }
  </style>

  <!-- Google Identity Services -->
  <script src="https://accounts.google.com/gsi/client" async defer></script>
</head>
<body>

<div class="container">
  <h2>Login to Your Account</h2>

  <form id="loginForm">
    <div class="form-group">
      <label for="identifier">Email *</label>
      <input type="email" id="identifier" name="identifier" required placeholder="Enter your email" />
    </div>
    <div class="form-group">
      <label for="password">Password *</label>
      <input type="password" id="password" name="password" required placeholder="Enter your password" />
    </div>
    <button type="submit">Login</button>
  </form>

  <!-- Google Sign-In Button -->
  <div class="google-wrapper">
    <div id="g_id_signin"></div>
  </div>

  <div class="footer-text">
    Don't have an account? <a href="/Staff/register">Register here</a>
  </div>
</div>

<script>
  // Handle Email/Password Login
  const loginForm = document.getElementById('loginForm');

  loginForm.addEventListener('submit', async function (e) {
    e.preventDefault();

    const identifier = document.getElementById('identifier').value.trim();
    const password = document.getElementById('password').value.trim();

    try {
      const res = await fetch('/Staff/login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ identifier, password })
      });

      const data = await res.json();

      if (data.user?.isAuthorized) {
        alert('Login successful!');
      } else {
        alert('You are not authorized to access this page.');
        return;
      }

      if (res.ok && data.token) {
        localStorage.setItem('token', data.token);
        localStorage.setItem('user', JSON.stringify(data.user));
        window.location.href = '/Staff/dashboard';
      } else {
        alert(data.message || 'Login failed.');
        window.location.href = '/Staff/login';
      }
    } catch (err) {
      console.error('Login error:', err);
      alert('Something went wrong. Try again.');
    }
  });

  // Google Sign-In
  window.onload = function () {
    google.accounts.id.initialize({
      client_id: '386508050197-iluerjae4ua3i4jgd4k4taio51mav3bt.apps.googleusercontent.com', // üîÅ Replace this
      callback: handleGoogleResponse,
    });

    google.accounts.id.renderButton(
      document.getElementById("g_id_signin"),
      {
        theme: "outline",
        size: "large",
        width: "100%",
      }
    );
  };

  async function handleGoogleResponse(response) {
    try {
      const res = await fetch('/Staff/google-login', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ tokenId: response.credential }),
      });

      const data = await res.json();

      if (data.user?.isAuthorized) {
        alert('Google login successful!');
        localStorage.setItem('token', data.token);
        localStorage.setItem('user', JSON.stringify(data.user));
        window.location.href = '/Staff/dashboard';
      } else {
        alert('You are not authorized to access this page.');
      }

    } catch (err) {
      console.error('Google login failed:', err);
      alert('Google login failed. Please try again.');
    }
  }
</script>

</body>
</html>
