<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Student Profile</title>
  <style>
    body {
      background-color: #f4f4f4;
      font-family: Arial, sans-serif;
      padding: 30px;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
      background: #ffffff;
      padding: 30px;
      border-radius: 8px;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    h1 {
      text-align: center;
      color: #2c3e50;
      margin-bottom: 30px;
    }

    .section {
      margin-bottom: 25px;
    }

    .section h2 {
      color: #34495e;
      border-bottom: 1px solid #ccc;
      padding-bottom: 5px;
      margin-bottom: 10px;
    }

    .section p {
      margin: 5px 0;
      color: #333;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Student Profile</h1>
    <div id="profileContent">
      <p>Loading...</p>
    </div>
  </div>

  <script>
    async function fetchStudentProfile() {
      const token = localStorage.getItem("token");
      if (!token) {
        document.getElementById('profileContent').innerHTML = '<p>You are not logged in.</p>';
        return;
      }

      let userId = null;
      try {
        const payload = JSON.parse(atob(token.split('.')[1]));
        userId = payload._id;
      } catch (err) {
        console.error("Failed to decode token", err);
        document.getElementById('profileContent').innerHTML = '<p>Invalid token.</p>';
        return;
      }

      try {
        const res = await fetch(`/Student/profile/${userId}`);
        if (!res.ok) throw new Error("Failed to fetch student data");

        const student = await res.json();

        const html = `
          <div class="section">
            <h2>Personal Info</h2>
            <p><strong>Name:</strong> ${student.firstName} ${student.middleName || ''} ${student.lastName}</p>
            <p><strong>Email:</strong> ${student.studentEmail}</p>
            <p><strong>Phone:</strong> ${student.studentPhone}</p>
            <p><strong>DOB:</strong> ${new Date(student.dob).toDateString()}</p>
            <p><strong>Gender:</strong> ${student.gender}</p>
          </div>

          <div class="section">
            <h2>Guardian Info</h2>
            <p><strong>Guardian 1:</strong> ${student.guardian1Name} (${student.guardian1Relation})</p>
            <p><strong>Phone:</strong> ${student.guardian1Phone}</p>
            ${student.guardian1Email ? `<p><strong>Email:</strong> ${student.guardian1Email}</p>` : ''}
            ${student.guardian2Name ? `<p><strong>Guardian 2:</strong> ${student.guardian2Name} (${student.guardian2Relation || ''})</p>` : ''}
          </div>

          <div class="section">
            <h2>Address</h2>
            <p><strong>Address:</strong> ${student.address1}${student.address2 ? ', ' + student.address2 : ''}</p>
            <p><strong>City:</strong> ${student.city}</p>
            <p><strong>State:</strong> ${student.state}</p>
            <p><strong>Zip Code:</strong> ${student.zipcode}</p>
            <p><strong>Country:</strong> ${student.country}</p>
          </div>

          <div class="section">
            <h2>Academic Info</h2>
            <p><strong>Course:</strong> ${student.course}</p>
            <p><strong>Class:</strong> ${student.classAssigned}</p>
            <p><strong>Subjects:</strong> ${student.subjects.join(', ')}</p>
            <p><strong>Academic Year:</strong> ${student.academicYear}</p>
            <p><strong>Session:</strong> ${student.academicSession}</p>
            <p><strong>Batch:</strong> ${student.batch}</p>
            <p><strong>Joining Date:</strong> ${student.joiningDate ? new Date(student.joiningDate).toDateString() : 'N/A'}</p>
            <p><strong>Current Semester:</strong> ${student.currentSemester || 'N/A'}</p>
            <p><strong>Fees Due:</strong> â‚¹${student.feesDue}</p>
            <p><strong>Enrolled:</strong> ${student.isEnrolled ? 'Yes' : 'No'}</p>
          </div>

          <div class="section">
            <h2>Status</h2>
            <p><strong>Hostel:</strong> ${student.isHostelResident ? 'Yes' : 'No'}</p>
            <p><strong>Transport:</strong> ${student.isTransportResident ? 'Yes' : 'No'}</p>
            <p><strong>Promoted:</strong> ${student.isPromoted ? 'Yes' : 'No'}</p>
            <p><strong>Graduated:</strong> ${student.isGraduated ? 'Yes' : 'No'}</p>
          </div>
        `;

        document.getElementById('profileContent').innerHTML = html;
      } catch (error) {
        console.error(error);
        document.getElementById('profileContent').innerHTML = '<p>Unable to load student profile.</p>';
      }
    }

    window.onload = fetchStudentProfile;
  </script>
</body>
</html>
