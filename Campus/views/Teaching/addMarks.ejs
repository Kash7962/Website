<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Student Marks</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
      background-color: #f9f9f9;
    }

    h1, h2 {
      text-align: center;
      color: #333;
    }

    form {
      background: #fff;
      padding: 20px;
      margin-bottom: 30px;
      border-radius: 8px;
      box-shadow: 0 0 10px #ccc;
    }

    label {
      display: block;
      margin: 10px 0 5px;
      font-weight: bold;
    }

    input, select {
      width: 100%;
      padding: 8px;
      margin-bottom: 10px;
    }

    button {
      padding: 10px 20px;
      background: #2c3e50;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background: #34495e;
    }

    .subject-row {
      display: flex;
      gap: 10px;
      margin-bottom: 10px;
    }

    .subject-row input {
      flex: 1;
    }

    .section {
      margin-bottom: 40px;
    }

    .exam-box {
      margin-top: 30px;
      padding: 15px;
      background: #eef;
      border-radius: 6px;
    }

    .add-btn {
      margin-top: 10px;
      background-color: green;
    }

    hr {
      margin: 20px 0;
    }
  </style>
</head>
<body>
  <h1>Student Marks</h1>

  <div class="section">
    <h2>Add Marks</h2>
    <form method="POST" action="/Staff/Teaching/student/<%= student._id %>/marks">
      <label>Exam Type:</label>
      <input type="text" name="examType" required>

      <div id="subjects-container">
        <div class="subject-row">
          <input type="text" name="subjects[0][name]" placeholder="Subject Name" required>
          <input type="number" name="subjects[0][marks]" placeholder="Marks" required>
          <input type="text" name="subjects[0][grade]" placeholder="Grade">
        </div>
      </div>

      <button type="button" class="add-btn" id="addSubjectBtn">+ Add Subject</button>

      <label>SGPA:</label>
      <input type="number" step="0.01" name="sgpa">

      <label>CGPA:</label>
      <input type="number" step="0.01" name="cgpa">

      <button type="submit">Add Marks</button>
    </form>
  </div>

  <div class="section">
    <h2>Existing Results</h2>
    <% if (student.result.length === 0) { %>
      <p>No marks available.</p>
    <% } else { %>
      <% student.result.forEach((r, index) => { %>
        <div class="exam-box">
          <h3><%= r.examType %></h3>

          <form method="POST" action="/Staff/Teaching/student/<%= student._id %>/marks/edit">
            <input type="hidden" name="examType" value="<%= r.examType %>">

            <% r.subjects.forEach((s, i) => { %>
              <div class="subject-row">
                <input type="text" name="subjects[name][]" value="<%= s.name %>" required>
                <input type="number" name="subjects[marks][]" value="<%= s.marks %>" required>
                <input type="text" name="subjects[grade][]" value="<%= s.grade %>">
              </div>
            <% }) %>

            <label>SGPA:</label>
            <input type="number" step="0.01" name="sgpa" value="<%= r.sgpa || '' %>">

            <label>CGPA:</label>
            <input type="number" step="0.01" name="cgpa" value="<%= r.cgpa || '' %>">

            <button type="submit">Update</button>
          </form>

          <form method="POST" action="/Staff/Teaching/student/<%= student._id %>/marks/delete">
            <input type="hidden" name="examType" value="<%= r.examType %>">
            <button type="submit" style="background-color: crimson; margin-top: 10px;">Delete</button>
          </form>
        </div>
      <% }) %>
    <% } %>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      let subjectIndex = 1;
      const subjectsContainer = document.getElementById('subjects-container');
      const addBtn = document.getElementById('addSubjectBtn');

      addBtn.addEventListener('click', () => {
        const row = document.createElement('div');
        row.className = 'subject-row';
        row.innerHTML = `
          <input type="text" name="subjects[${subjectIndex}][name]" placeholder="Subject Name" required>
          <input type="number" name="subjects[${subjectIndex}][marks]" placeholder="Marks" required>
          <input type="text" name="subjects[${subjectIndex}][grade]" placeholder="Grade">
        `;
        subjectsContainer.appendChild(row);
        subjectIndex++;
      });
    });
  </script>
</body>
</html>
