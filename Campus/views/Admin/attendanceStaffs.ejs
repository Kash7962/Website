<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Attendance Records</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    :root {
      --bg: #f8fafc;
      --card: #ffffff;
      --primary: #2563eb;
      --success: #16a34a;
      --danger: #dc2626;
      --text: #111827;
      --muted: #6b7280;
      --shadow: rgba(0, 0, 0, 0.1);
    }

    body {
      font-family: Arial, sans-serif;
      background: var(--bg);
      color: var(--text);
      margin: 0;
      padding: 2rem;
    }

    h1 {
      text-align: center;
      color: var(--primary);
      margin-bottom: 2rem;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: var(--card);
      box-shadow: 0 4px 12px var(--shadow);
      border-radius: 10px;
      overflow: hidden;
    }

    th, td {
      padding: 12px 15px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background: var(--primary);
      color: white;
    }

    tr:hover {
      background-color: #f1f5f9;
    }

    .btn-delete {
      padding: 5px 10px;
      background-color: var(--danger);
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 14px;
    }

    .btn-delete:hover {
      opacity: 0.9;
    }

    #flashMessage {
      text-align: center;
      margin-bottom: 1rem;
      font-weight: bold;
    }

    .success {
      color: var(--success);
    }

    .error {
      color: var(--danger);
    }
  </style>
</head>
<body>
  <h1>All Attendance Records</h1>
  <div id="flashMessage"></div>

  <table>
    <thead>
      <tr>
        <th>Staff Name</th>
        <th>Email</th>
        <th>Date</th>
        <th>Status</th>
        <th>Check-In</th>
        <th>Check-Out</th>
        <th>Marked By</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="attendanceBody">
      <% attendanceRecords.forEach(record => { %>
        <tr data-id="<%= record._id %>">
          <td><%= record.staff?.name || 'N/A' %></td>
          <td><%= record.staff?.email || 'N/A' %></td>
          <td><%= record.date.toLocaleDateString() %></td>
          <td><%= record.status %></td>
          <td><%= record.checkInTime ? record.checkInTime.toLocaleTimeString() : '-' %></td>
          <td><%= record.checkOutTime ? record.checkOutTime.toLocaleTimeString() : '-' %></td>
          <td><%= record.markedBy %></td>
          <td><button class="btn-delete">Delete</button></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    const flashMessage = document.getElementById('flashMessage');

    function showFlashMessage(type, message) {
      flashMessage.textContent = message;
      flashMessage.className = type;
      setTimeout(() => {
        flashMessage.textContent = '';
        flashMessage.className = '';
      }, 3000);
    }

    function attachDeleteEvents() {
      const deleteButtons = document.querySelectorAll('.btn-delete');
      deleteButtons.forEach(btn => {
        btn.addEventListener('click', async (e) => {
          const row = e.target.closest('tr');
          const id = row.dataset.id;
          if (!confirm('Are you sure you want to delete this attendance record?')) return;

          try {
            const res = await fetch(`/Admin/attendance/delete/${id}`, { method: 'DELETE' });
            if (!res.ok) {
              const data = await res.json();
              throw new Error(data.error || 'Failed to delete record');
            }
            row.remove();
            showFlashMessage('success', 'Attendance record deleted');
          } catch (err) {
            console.error(err);
            showFlashMessage('error', err.message);
          }
        });
      });
    }

    document.addEventListener('DOMContentLoaded', attachDeleteEvents);
  </script>
</body>
</html>
