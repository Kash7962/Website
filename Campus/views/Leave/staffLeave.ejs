<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Staff Leave Request</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 2rem;
    }

    .container {
      max-width: 600px;
      margin: auto;
      background: #fff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h2, h3 {
      margin-bottom: 1rem;
      color: #333;
    }

    input, button {
      width: 100%;
      padding: 0.5rem;
      margin: 0.5rem 0;
      font-size: 1rem;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    button {
      background-color: #007bff;
      color: #fff;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    button:hover {
      background-color: #0056b3;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      background-color: #f9f9f9;
      border: 1px solid #ddd;
      margin: 0.5rem 0;
      padding: 1rem;
      border-radius: 4px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .leave-info {
      flex-grow: 1;
    }

    .delete-btn {
      background: none;
      color: #d9534f;
      border: none;
      cursor: pointer;
      font-weight: bold;
    }

    .delete-btn:hover {
      text-decoration: underline;
    }

    .status {
      font-weight: bold;
    }

    .status.Pending {
      color: #ffc107;
    }

    .status.Approved {
      color: #28a745;
    }

    .status.Denied {
      color: #dc3545;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Submit Leave Request</h2>
    <div>
      <input type="text" id="reason" placeholder="Reason for leave" required />
      <input type="date" id="fromDate" required />
      <input type="date" id="toDate" required />
      <button id="submitBtn">Submit</button>
    </div>

    <h3>Your Leave Requests</h3>
    <ul id="leaveList"></ul>
  </div>

  <script>
    const token = localStorage.getItem("token");
    let user = null;

    if (token) {
    try {
    const payload = JSON.parse(atob(token.split('.')[1]));
    user = payload;
  } catch (e) {
    console.error("Failed to decode token:", e);
  }
  }
    const userData = user;

    async function fetchLeaves() {
      try {
        const res = await fetch('/Staff/Leave/', {
          headers: { Authorization: `Bearer ${token}` }
        });
        const data = await res.json();
        const userLeaves = data.filter(leave => leave.email === userData.email);

        const leaveList = document.getElementById('leaveList');
        leaveList.innerHTML = '';

        userLeaves.forEach(leave => {
          const li = document.createElement('li');

          const leaveInfo = document.createElement('div');
          leaveInfo.className = 'leave-info';
          leaveInfo.innerHTML = `
            <strong>${leave.reason}</strong><br>
            From: ${new Date(leave.fromDate).toDateString()}<br>
            To: ${new Date(leave.toDate).toDateString()}<br>
            Status: <span class="status ${leave.status}">${leave.status}</span>
          `;

          const deleteBtn = document.createElement('button');
          deleteBtn.className = 'delete-btn';
          deleteBtn.textContent = 'Delete';
          deleteBtn.addEventListener('click', () => deleteLeave(leave._id));

          li.appendChild(leaveInfo);
          li.appendChild(deleteBtn);
          leaveList.appendChild(li);
        });
      } catch (err) {
        console.error('Error fetching leaves:', err);
        alert('Failed to load leave requests.');
      }
    }

    async function submitLeave() {
      const reason = document.getElementById('reason').value.trim();
      const fromDate = document.getElementById('fromDate').value;
      const toDate = document.getElementById('toDate').value;

      if (!reason || !fromDate || !toDate) {
        alert('All fields are required.');
        return;
      }

      try {
        const res = await fetch('/Staff/Leave/request', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            Authorization: `Bearer ${token}`
          },
          body: JSON.stringify({ reason, fromDate, toDate })
        });

        const result = await res.json();
        if (!res.ok) {
          alert(result.message || 'Failed to submit leave request.');
          return;
        }

        alert('Leave request submitted!');
        document.getElementById('reason').value = '';
        document.getElementById('fromDate').value = '';
        document.getElementById('toDate').value = '';
        fetchLeaves();
      } catch (err) {
        console.error('Submit error:', err);
        alert('Error submitting leave request.');
      }
    }

    async function deleteLeave(id) {
      if (!confirm('Are you sure you want to delete this leave request?')) return;

      try {
        const res = await fetch(`/Staff/Leave/${id}`, {
          method: 'DELETE',
          headers: { Authorization: `Bearer ${token}` }
        });

        const result = await res.json();
        if (!res.ok) {
          alert(result.message || 'Failed to delete leave.');
          return;
        }

        fetchLeaves();
      } catch (err) {
        console.error('Delete error:', err);
        alert('Error deleting leave.');
      }
    }

    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('submitBtn').addEventListener('click', submitLeave);
      fetchLeaves();
    });
  </script>
</body>
</html>
