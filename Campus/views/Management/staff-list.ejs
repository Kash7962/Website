<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Staff Management</title>
  <style>
    body { font-family: Arial; background: #f4f4f4; padding: 20px; }
    h2 { text-align: center; }
    select, table, th, td, button {
      font-size: 16px; padding: 10px;
    }
    table {
      width: 100%; background: #fff; border-collapse: collapse; margin-top: 20px;
    }
    th, td {
      border: 1px solid #ccc; padding: 12px; text-align: left;
    }
    th { background-color: #e0e0e0; }
    button {
      background-color: #007bff; color: white; border: none;
      cursor: pointer;
    }
    button:hover { background-color: #0056b3; }
  </style>
</head>
<body>
  <h2>Staff Directory</h2>
  <label for="deptFilter">Filter by Department:</label>
  <select id="deptFilter">
    <option value="All">All</option>
    <option value="Teaching">Teaching</option>
    <option value="Kitchen">Kitchen</option>
    <option value="Library">Library</option>
    <option value="Management">Management</option>
    <option value="Accounts">Accounts</option>
  </select>

  <table>
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Department</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody id="staffTable">
      <% staffs.forEach(staff => { %>
        <tr data-department="<%= staff.department %>">
          <td><%= staff.username %></td>
          <td><%= staff.email %></td>
          <td><%= staff.phone %></td>
          <td><%= staff.department %></td>
          <td>
            <a href="/Staff/Management/staffs/edit/<%= staff._id %>"><button>Edit</button></a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const filter = document.getElementById('deptFilter');
      const rows = document.querySelectorAll('#staffTable tr');

      filter.addEventListener('change', () => {
        const value = filter.value;
        rows.forEach(row => {
          const dept = row.getAttribute('data-department');
          if (value === 'All' || dept === value) {
            row.style.display = '';
          } else {
            row.style.display = 'none';
          }
        });
      });
    });
  </script>
</body>
</html>
