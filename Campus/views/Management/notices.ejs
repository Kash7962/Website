<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Notices</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f0f2f5;
      padding: 30px;
    }
    .container {
      max-width: 900px;
      margin: auto;
      background: #fff;
      padding: 25px;
      border-radius: 8px;
      box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    }
    h1, h2 {
      text-align: center;
    }
    form {
      display: flex;
      flex-direction: column;
      gap: 10px;
      margin-bottom: 40px;
    }
    textarea {
      resize: vertical;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }
    input[type="file"] {
      padding: 6px;
    }
    button {
      padding: 10px;
      background-color: #004aad;
      color: white;
      border: none;
      border-radius: 4px;
      font-weight: 600;
      cursor: pointer;
    }
    button:hover {
      background-color: #003080;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      padding: 15px;
      border-bottom: 1px solid #ddd;
    }
    li:last-child {
      border-bottom: none;
    }
    a {
      color: #007bff;
      text-decoration: none;
      display: inline-block;
      margin-top: 5px;
    }
    small {
      display: block;
      color: #555;
      margin-top: 5px;
    }
    .error-list {
      background: #ffe0e0;
      padding: 10px;
      margin-bottom: 15px;
      border-radius: 4px;
      color: #a00;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Post a New Notice</h1>

    <% if (typeof errors !== 'undefined') { %>
      <div class="error-list">
        <ul>
          <% errors.forEach(err => { %>
            <li><%= err.msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <form action="/Staff/Management/notices" method="POST" enctype="multipart/form-data">
      <label for="description">Notice Description:</label>
      <textarea name="description" id="description" rows="3" required></textarea>

      <label for="file">Optional Attachment (PDF/Image):</label>
      <input type="file" name="file" id="file" accept=".jpg,.jpeg,.png,.pdf" />

      <button type="submit">Post Notice</button>
    </form>

    <h2>All Notices</h2>
    <ul>
      <% notices.forEach(notice => { %>
        <li>
          <p><%= notice.description %></p>
          <% if (notice.file) { %>
            <a href="/uploads/notices/<%= notice.file %>" target="_blank">View Attachment</a>
          <% } %>
          <small>Posted on: <%= notice.postedOn.toDateString() %></small>
          <form action="/Staff/Management/notices/delete/<%= notice._id %>" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>

  <script>
    // Optional admin scripts
  </script>
</body>
</html>
